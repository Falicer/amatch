<div id="searchFormWrapper">
  <form id="searchForm" action="/result" method="post">
    <legend>Search for matches</legend>
    <label>Name a hobby you want your matches to have: </label>
    <input id="textinput" name=hobby1 placeholder="Choose a hobby from below" readonly>
    <button id="searchButton" type="submit">Find me matches!</button>
  </form>
  <div class="filterButtonContainer" id="filterButtonContainer">
    <% for (let index = 0; index < hobbies.length; index++) { %>
    <button class="filterButton"><%= hobbies[index].name %></button>
    <% } %>
  </div>
</div>

