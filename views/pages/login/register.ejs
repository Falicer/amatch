<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="styles/register.css">
</head>

<body>
  <div class="container">
    <div class="loginArea">
      <a href="index.html"><img src="assets/img/logo-with-text.png" alt=""></a>
      <div class="welcome">
        <h1 class="register">Register to Amatch</h1>
        <h2 class="register">Find someone who likes what you like</h2>
      </div>
      <form action="/register" method="post">
        <div class="formpjes">
          <label for="firstName">First name</label>
          <input type="text" name="firstName" id="firstName">
        </div>
        <div class="formpjes">
          <label for="lastName">Last name</label>
          <input type="text" name="lastName" id="lastName">
        </div>
        <div class="formpjes">
          <label for="emailAdress">E-mail</label>
          <input type="email" name="emailAdress" id="emailAdress">
        </div>
        <div class="formpjes">
          <label for="phoneNumber">Phone number</label>
          <input type="number" name="phoneNumber" id="phoneNumber">
        </div>
        <div class="formpjes">
          <label for="password">Password: </label>
          <input type="password" name="password" id="password">
        </div>
        <div class="formpjes">
          <label for="confirmPassword" id="cPasswordLabel">Confirm Password:</label>
          <input type="text" name="confirmPassword" id="confirmPassword">
        </div>
        <div class="nextForm">
          <div class="formpjes">
            <label for="hobbies">Hobbies</label>
            <select name="hobbies" multiple>
              <div>
                <% hobbies.forEach(hobby => { %>
                <option value="<%= hobby._id %>"><%= hobby.name %></option>
                <% }) %>
              </div>
            </select>
          </div>
          <div class="formpjes">
            <label for="education">Education:</label>
            <input type="text" name="education" id="education">
          </div>
          <div class="formpjes">
            <label for="gender">Gender:</label>
            <label for="male">Male:</label><input type="radio" name="gender" value="m">
            <label for="woman">Woman:</label><input type="radio" name="gender" value="w">
          </div>
          <div class="formpjes">
            <label for="job">Job:</label>
            <input type="text" name="job" id="job">
          </div>
          <div class="formpjes">
            <label for="profilePictures">Profile Picture:</label>
            <input type="file" name="profilePictures" id="profilePictures">
          </div>
          <div class="formpjes">
            <label for="age">Age:</label>
            <input type="number" name="age" id="age">
          </div>
          <div class="formpjes">
            <label for="username">Username: </label>
            <input type="text" name="username" id="username">
          </div>
        </div>

        <p>Already have an account? <a href="/">Return to login</a></p>

        <button type="submit" id="submitButton">Register to Amatch</button>
      </form>
    </div>
  </div>
</body>
<script src="static/js/script.js"></script>

</html>